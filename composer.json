{
    "name": "sjorso/subtitletools",
    "description": "Subtitle Tools",
    "keywords": ["subtitles"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": "^7.1.3",
        "doctrine/dbal": "^2.6",
        "laravel/framework": "5.7.*",
        "laravel/tinker": "^1.0",
        "patrickschur/language-detection": "^3.4",
        "predis/predis": "^1.1",
        "pusher/pusher-php-server": "^3.0",
        "sjorso/configless-laravel-backup": "^0.0.1",
        "sjorso/pinyin": "^1.0",
        "sjorso/sup": "^0.0",
        "spatie/flysystem-dropbox": "^1.0",
        "spatie/laravel-sitemap": "^5.0"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "^2.4",
        "fzaninotto/faker": "^1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "^7.0",
        "spatie/phpunit-snapshot-assertions": "^1.0"
    },
    "autoload": {
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "app/Support/helpers.php",
            "resources/views/helpers/blade.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate --ansi"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@composer ide-helpers"
        ],
        "ide-helpers": [
            "@php artisan ide-helper:generate",
            "@php artisan ide-helper:meta",
            "@php artisan ide-helper:models -N"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
